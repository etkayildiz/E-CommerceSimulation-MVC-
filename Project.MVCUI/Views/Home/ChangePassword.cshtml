@model ProfileVM 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/OuterTools/img/favicon.png">

    <title>Tekno Center</title>

    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />


    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/OuterTools/js/jquery.js"></script>
    <script src="~/OuterTools/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

    <style>

        .field-validation-error {
            color: red;
            font-weight: bolder;
        }
    </style>

</head>

<body class="login-body">

    <div class="container">

        @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.HiddenFor(x => x.User.ID)

            <h2 class="form-signin-heading">Şifre Yenileme</h2>
            <div class="login-wrap">
                @Html.ValidationMessageFor(x => x.User.Password)
                @Html.PasswordFor(x => x.User.Password, new { @class="form-control", placeholder="Yeni şifre"})

                @Html.ValidationMessageFor(x => x.User.ConfirmPassword)
                @Html.PasswordFor(x => x.User.ConfirmPassword, new { @class="form-control", placeholder="Şifre doğrula"})

                <button class="btn btn-lg btn-login btn-block" type="submit">Şifre Değiştir</button>

                <div class="registration">
                    Giriş sayfasına
                    @Html.ActionLink("dön", "Login", "Home")
                </div>

            </div>
        }
    </div>






</body>
</html>
