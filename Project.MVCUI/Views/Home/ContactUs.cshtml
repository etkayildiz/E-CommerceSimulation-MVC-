
@{
    ViewBag.Title = "ContactUs";
}

<div class="alert-success text-center" style="font-size:large">@ViewBag.destek</div>

<h3 class="text-center">Bize Ulaşın</h3>

@using (Html.BeginForm())
{
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel panel-body">
                <div class="row">
                    <div class="form-group">
                        <label class="control-label col-lg-2">İsim Soyisim: </label>
                        <div class="col-lg-10">
                            @Html.TextBox("fullName", null, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="control-label col-lg-2">Email: </label>
                        <div class="col-lg-10">
                            @Html.TextBox("email", null, new { @class = "form-control", required = "required", type = "email" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="control-label col-lg-2">Mesajınız: </label>
                        <div class="col-lg-10">
                            @Html.TextArea("message", null, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <br /><br /><br />

                    <div class="form-group">
                        <label class="control-label col-lg-2"></label>
                        <div class="col-lg-10">
                            <button class="btn btn-primary">Gönder</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

